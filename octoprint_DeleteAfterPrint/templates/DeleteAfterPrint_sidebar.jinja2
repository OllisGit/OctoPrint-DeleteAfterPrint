<div id="sidebar_plugin_deleteAfterPrint" class="input-group">
	<label class="checkbox">
		<input type="checkbox" data-bind="enable: loginState.isUser(), checked: deleteAfterPrintEnabled" />
		Delete after print finishes<br/>
    </label>
    <label class="checkbox">
		<input type="checkbox" data-bind="enable: loginState.isUser() && deleteAfterPrintEnabled, checked: deleteInSubFoldersEnabled" />
		also in sub-folders
	</label>
	<label class="checkbox">
		<input type="checkbox" data-bind="enable: loginState.isUser() && deleteAfterPrintEnabled, checked: deleteWhenFailedEnabled"/>
		also when print failed
	</label>
	<label class="checkbox">
		<input type="checkbox" data-bind="enable: loginState.isUser() && deleteAfterPrintEnabled, checked: deleteWhenCanceledEnabled"/>
		also when print canceled
	</label>
</div>
